<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootlayout"
    tools:context="com.raywenderlich.favoritemovies.LessonFragment">


    <FrameLayout
        android:visibility="visible"
        android:id="@+id/card_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/card_back" android:id="@+id/include_back"/>
    </FrameLayout>

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <include layout="@layout/card_front" android:id="@+id/include_front"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/congratzContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgCongrats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/trophy"></ImageView>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txtCongratys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCongrats"
                android:gravity="center"
                android:text="Congratulations" />

            <TextView
                android:id="@+id/txtSuccessCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCongratys"
                android:text="You have successfully completed" />

            <TextView
                android:id="@+id/txtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSuccessCompleted"
                android:text="Level 1" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/buttonRedo"
                android:text="Take Quiz"
                android:textColor="@color/cardFront"
                app:backgroundTint="@color/colorAccent" />
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
