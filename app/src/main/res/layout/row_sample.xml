<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="sample"
            type="com.lgvalle.material_animations.Sample" />
    </data>

    <android.support.v7.widget.CardView
        card_view:cardElevation="3dp"
        android:layout_margin="10dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:id="@+id/sample_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_double">

        <Button
            android:layout_alignParentLeft="true"
            android:text="@{sample.index}"
            android:background="@drawable/texview_round"
            android:id="@+id/sample_icon"
            style="@style/MaterialAnimations.Icon.Small"
             />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sample_icon"
            android:id="@+id/sample_name"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sample.name}"
            tools:text="View " />

        <ImageView
            android:visibility="@{sample.isProgress ? View.GONE : View.VISIBLE}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/inprogress" />
        <ImageView
            android:visibility="@{sample.isDone ? View.GONE : View.VISIBLE}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/check" />
        <ImageView
            android:visibility="@{sample.isLocked ? View.GONE : View.VISIBLE}"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/locked" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>